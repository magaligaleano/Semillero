# Configuración de desarrollo con Docker
PORT=5000
NODE_ENV=development

# Base de datos MongoDB local con Docker
MONGODB_URI=mongodb://semillero-user:semillero-dev-password@localhost:27017/semillero-digital?authSource=semillero-digital

# Google OAuth 2.0 (usar las mismas credenciales de producción)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
